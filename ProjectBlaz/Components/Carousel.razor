
<div class="flex transition-transform duration-500 h-full ease-out" style="transform: translateX(-@(_currentIndex * 100)%)">

    @foreach (var image in _images)
    {
        <div class="min-w-full h-full bg-gray-200">
            <img src="@image" class="block w-full h-full object-contain"/>
        </div>
    }
</div>

<button @onclick="PrevSlide" class="absolute top-1/2 z-10 left-4 -translate-y-1/2 bg-black/50 text-white p-2 opacity-0 group-hover:opacity-100 transition-opacity hover:bg-black/70">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
</button>

<button @onclick="NextSlide" class="absolute z-10 top-1/2 right-4 -translate-y-1/2 bg-black/50 text-white p-2 opacity-0 group-hover:opacity-100 transition-opacity hover:bg-black/70">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
    </svg>
</button>

<div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex space-x-2">
    @for (int i = 0; i < _images.Count; i++)
    {
        var index = i;
        <button @onclick="() => GoToSlide(index)" class="w-3 h-3 transition-colors @(_currentIndex == i ? "bg-white" : "bg-white/50")"></button>
    }
</div>
