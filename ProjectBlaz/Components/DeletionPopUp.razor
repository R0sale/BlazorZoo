@if (IsVisible)
{
    <div class="bg-white rounded-2xl shadow-2xl p-6 sm:p-8 w-full max-w-md border border-gray-100 mx-4 transform transition-all">

        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-5">
            <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>

        <div class="text-center">
            <h3 class="text-lg leading-6 font-semibold text-gray-900">Delete Account</h3>
            <p class="text-sm text-gray-500 mt-2">
                Are you sure that you want to delete your account? This action cannot be undone.
            </p>
        </div>

        <div class="mt-6 flex flex-col sm:flex-row gap-3 justify-center">
            <button @onclick="ClosePopUp"
                    class="w-full sm:w-auto inline-flex justify-center rounded-lg border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-200 transition-colors">
                No, Keep it
            </button>

            <button @onclick="@(async () => await DeleteUserAsync())"
                    class="w-full sm:w-auto inline-flex justify-center rounded-lg shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                Yes, Delete
            </button>
        </div>
    </div>
}